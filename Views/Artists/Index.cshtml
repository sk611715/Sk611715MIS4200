@model IEnumerable<Sk611715MIS4200.Models.Artist>

@{
    ViewBag.Title = "Artists";
}

<h2>Artists <span class="glyphicon glyphicon-music"></span></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.artistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.artistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.artistID }) |
                @Html.ActionLink("Details", "Details", new { id = item.artistID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.artistID })
            </td>
        </tr>
    }

</table>
